exit (state) {
    O: "\nExit with state ", exitstate, '\n';
    jump 1000000000;
}

O: "-- A small example program, written in Fraser --\n\n";

var x = 0;
var y = 0;

loop:

    O: "Please write your 1. number (or 0 to exit): ";
    I: &x;

    !x {
        exit (0);
    }

    O: "Please write your 2. number (or 0 to exit): ";
    I: &y;

    !y {
        exit (0);
    }

    O: x, " + ", y, " = ", x + y, '\n';


jump loop;
